{
    "name": "rapid",
    "version": "1.0.0",
    "description": "Core architecture template based on express.js for rapid development of REST APIs",
    "main": "index.ts",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "npx tsc",
        "start": "ts-node index.ts",
        "waitListScript": "ts-node waitListSendEmails.ts",
        "startWithBuild": "tsc --outDir build && node build/index.js",
        "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
        "installApp": "rm -rf node_modules/ && rm -rf package-lock.json && npm i && npm run createDb && npm run migrate && npm run seed",
        "createDb": "./node_modules/.bin/ts-node createDb.ts",
        "migrate": "./node_modules/.bin/knex migrate:latest",
        "seed": "./node_modules/.bin/knex seed:run",
        "dockerInstall": "npm run createDb && npm run migrate",
        "dockerize": " npm run dockerImage && npm run dockerRun ",
        "dockerImage": "docker build -t rapid --network=host .",
        "dockerRun": "docker run --name rapid -d --network=host rapid",
        "lint": "npx eslint src",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "npx prettier src --check",
        "prettier:fix": "npm run prettier -- --write",
        "format": "npm run prettier:fix && npm run lint:fix",
        "buildAndStart": "npx tsc && node ./dist/index.js"
    },
    "author": "Goran Tolusic",
    "license": "ISC",
    "dependencies": {
        "@tsed/core": "^7.61.1",
        "@tsed/exceptions": "7.36.3",
        "@types/bcrypt": "^5.0.0",
        "@types/body-parser": "^1.19.2",
        "@types/got": "^9.6.12",
        "@types/pg": "^8.6.6",
        "bcrypt": "^5.1.0",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.9.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "generate-password": "^1.7.1",
        "googleapis": "^133.0.0",
        "got": "^11.8.6",
        "jsonwebtoken": "^9.0.0",
        "knex": "^2.3.0",
        "lodash": "^4.17.21",
        "mqtt": "^5.0.0",
        "nodemailer": "^6.9.0",
        "pg": "^8.10.0",
        "reflect-metadata": "^0.1.13",
        "typedi": "^0.10.0",
        "typeorm": "^0.3.11",
        "uid": "^2.0.1",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.15",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/lodash": "^4.14.191",
        "@types/node": "^18.11.18",
        "@types/nodemailer": "^6.4.7",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "concurrently": "^7.6.0",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "nodemon": "^2.0.20",
        "prettier": "2.8.7",
        "ts-node": "10.7.0",
        "typescript": "^4.9.4"
    }
}
